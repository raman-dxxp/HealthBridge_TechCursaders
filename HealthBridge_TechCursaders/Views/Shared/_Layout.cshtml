<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]  HealthBridge</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HealthBridge_TechCursaders.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="custom-header">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark  box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="img-fluid" src="~/images/health1.png" alt="Health Bridge" asp-append-version="true">
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">About Us</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">How It works</a>
                        </li>

                        <li class="nav-item btn-primary">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="login">Login</a>
                        </li>
                        <li class="nav-item btn-primary">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="signup">SignUp</a>
                        </li>
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    

    <!-- Footer Section -->
<footer class="footer text-muted position-relative">
    <div class="container text-center">
        <!-- Logo -->
        <div class="footer-logo">
            <img src="~/images/health1.png" alt="HealthBridge Logo">
        </div>
        
        <!-- Tagline -->
        <h2 class="footer-tagline">GET THE BIG PICTURE OF YOUR HEALTH.<br> START HEALTH BRIDGE TODAY.</h2>
        
        <!-- Navigation Links -->
        <ul class="footer-nav">
            <li><a href="#">Home</a></li>
            <li><a href="#">About Us</a></li>
            <li><a href="#">Contact Us</a></li>
            <li><a href="#">How it Works</a></li>
            <li><a href="#">Login/SignUp</a></li>
        </ul>

        <!-- Copyright -->
        <p class="footer-copyright">All Rights Reserved By <i>HEALTH BRIDGE</i>.</p>
    </div>
</footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
