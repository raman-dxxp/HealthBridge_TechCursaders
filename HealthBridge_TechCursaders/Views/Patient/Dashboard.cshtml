<section id="dashboard" class="dashboard-section py-5">
        <div class="container">
            <h2 class="mb-4">Health Timeline</h2>
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <ul class="nav nav-tabs" id="healthTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="all-tab" data-bs-toggle="tab" data-bs-target="#all" type="button" role="tab" aria-controls="all" aria-selected="true">All</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="healthtimeline-tab" data-bs-toggle="tab" data-bs-target="#healthtimeline" type="button" role="tab" aria-controls="healthtimeline" aria-selected="false">Health Timeline</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="healthsummary-tab" data-bs-toggle="tab" data-bs-target="#healthsummary" type="button" role="tab" aria-controls="healthsummary" aria-selected="false">health Summary</button>
                        </li>
                    </ul>
                </div>
                <div class="searchhere w-25">
                    <input type="text" class="form-control" placeholder="Search your health records...">
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-md-3">
                    <div class="card p-3 text-center bg-success text-white">
                        <h5>Consultations</h5>
                        <p>8 in last 12 months</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card p-3 text-center bg-warning text-white">
                        <h5>Lab Tests</h5>
                        <p>12 in last 12 months</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card p-3 text-center bg-purple text-dark">
                        <h5>Prescriptions</h5>
                        <p>4 Active medications</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card p-3 text-center bg-danger text-white">
                        <h5>Urgent</h5>
                        <p>1 Follow up needed</p>
                    </div>
                </div>
            </div>
            <div class="row mt-4">
                <div class="tab-content" id="healthTabsContent">
                    <div class="tab-pane fade show active" id="all" role="tabpanel" aria-labelledby="all-tab">
                        <div class="row mt-4">
                            <div class="col-md-6">
