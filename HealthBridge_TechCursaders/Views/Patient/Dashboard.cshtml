@model List<HealthBridge_TechCursaders.Models.Patient>

@{
    ViewData["Title"] = "Patient Dashboard";
}

<div class="container">
    <h1>Patient Dashboard</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Patient ID</th>
                <th>Health Card Number</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Date of Birth</th>
                <th>Gender</th>
                <th>Created On</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var patient in Model)
            {
                <tr>
                    <td>@patient.PatientId</td>
                    <td>@patient.HealthCardNumber</td>
                    <td>@patient.FirstName</td>
                    <td>@patient.LastName</td>
                    <td>@patient.DateOfBirth.ToShortDateString()</td>
                    <td>@patient.Gender</td>
                    <td>@patient.Created.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
</div>