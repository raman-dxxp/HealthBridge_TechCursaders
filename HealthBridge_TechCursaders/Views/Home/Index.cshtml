@{ ViewData["Title"] = "Home"; }

<!-----hero banner--->
<section class="hero text-left py-3">
    <div class="container"#>
        <div class="row">
            <div class="col-lg-6 col-md-6 col-12">
                <div class="banner-text">
                    <h2>Your Health, Connected. Simplified.</h2>
                <p class="lead">An advanced health management system that provides 
                    seamless interaction between patients and healthcare providers.</p>
                </div>
            </div>

            <div class="col-lg-6 col-md-6 col-12">
                <div class="banner-image">
                    <img class="img-fluid" src="images/banner-image.png" alt="banner image"/>
                </div>
            </div>
        </div>
    </div>
        
</section>
<!-----hero banner--->

<!----- Key features--->
<section id="key-features">
    <div class="container text-center">
        <h2 class="feature-title text-dark">KEY FEATURES</h2>
        <div class="feature-content">
            <!-- Left Features -->
            <div class="feature-box left">
                <div class="feature-card">
                    <i class="bi bi-person-circle"></i>
                    <p>A Unified Health Profile</p>
                </div>
                <div class="feature-card">
                    <i class="bi bi-shield-lock"></i>
                    <p>Secure Provider Sharing</p>
                </div>
            </div>

            <!-- Center Image -->
            <div class="feature-image">
                <img src="~/images/bg-girl.png" alt="Woman Using Phone">
            </div>

            <!-- Right Features -->
            <div class="feature-box right">
                <div class="feature-card">
                    <i class="bi bi-file-text"></i>
                    <p>Plain Language Health Data</p>
                </div>
                <div class="feature-card">
                    <i class="bi bi-calendar-check"></i>
                    <p>Appointment & Prescription Tracking</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!----- Key features end--->

    <section id="dashboard" class="dashboard text-center py-5 bg-dark text-white">
        <h2>Effortless Health Management for Patients & Providers</h2>
        <p>Manage your health records, consult with doctors, and stay updated with real-time health insights.</p>
        <a href="#" class="btn btn-primary">Click Here</a>
    </section>

