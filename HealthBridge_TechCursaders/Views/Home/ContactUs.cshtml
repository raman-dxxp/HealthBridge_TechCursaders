@{
    ViewData["Title"] = "Contact Us";
}

<section id="contact" class="contact-section py-5 text-white">
    <div class="container d-flex justify-content-center align-items-center">
        <div class="row w-100">
            <div class="col-lg-6 d-flex flex-column justify-content-center">
                <div class="card p-4 card-contact">
                    <h2 class="text-white mb-5">Get In Touch With Us</h2>
                    <form id="contactForm">
                        <div class="mb-3">
                            <label class="form-label text-white">Full Name</label>
                            <input type="text" id="fullname" class="form-control" placeholder="Enter Your Full Name">
                        </div>
                        <div class="mb-3">
                            <label class="form-label text-white">Email Address</label>
                            <input type="email" id="email" class="form-control" placeholder="Enter Your Email Address">
                        </div>
                        <div class="mb-3">
                            <label class="form-label text-white">Phone Number</label>
                            <input type="tel" id="phone" class="form-control" placeholder="Enter Your Phone Number">
                            <small class="text-warning">Format: (123) 456-7890</small>
                        </div>
                        <div class="mb-3">
                            <label class="form-label text-white">Inquiry Type</label>
                            <select id="inquiryType" class="form-control">
                                <option selected disabled>Select Inquiry Type</option>
                                <option value="general">General Information</option>
                                <option value="support">Technical Support</option>
                                <option value="partnership">Partnership Opportunities</option>
                                <option value="feedback">Feedback/Suggestions</option>
                                <option value="other">Other</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label text-white">Message</label>
                            <textarea id="message" class="form-control" rows="5" placeholder="Please describe your inquiry or message"></textarea>
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="privacyConsent">
                            <label class="form-check-label text-white" for="privacyConsent">I consent to HealthBridge collecting and processing my personal information for the purpose of responding to my inquiry.</label>
                        </div>
                        <button type="button" class="btn btn-primary mt-3" onclick="submitContactForm()">Submit</button>
                        <p id="contactMessage" class="mt-3 text-center"></p>
                    </form>
                </div>
            </div>
            <div class="col-lg-6 d-flex justify-content-center align-items-center flex-column">
                <img src="~/images/contact-us.png" class="img-fluid mb-4" alt="Contact Illustration">
                
                <div class="card p-4 w-100 contact-info-card">
                    <h3 class="text-white mb-3">Contact Information</h3>
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-geo-alt-fill me-3"></i>
                        <p class="mb-0 text-white">123 Queen Street West, Toronto, ON M5V 2D3</p>
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-telephone-fill me-3"></i>
                        <p class="mb-0 text-white">+1 (416) 555-1234</p>
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-envelope-fill me-3"></i>
                        <p class="mb-0 text-white">support@healthbridge.ca</p>
                    </div>
                    <div class="d-flex align-items-center">
                        <i class="bi bi-clock-fill me-3"></i>
                        <p class="mb-0 text-white">Monday - Friday: 9:00 AM - 5:00 PM EST</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    function submitContactForm() {
        let fullName = document.getElementById("fullname").value;
        let email = document.getElementById("email").value;
        let phone = document.getElementById("phone").value;
        let inquiryType = document.getElementById("inquiryType").value;
        let message = document.getElementById("message").value;
        let privacyConsent = document.getElementById("privacyConsent").checked;
        let contactMessage = document.getElementById("contactMessage");

        // Basic email validation
        let emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        
        // Basic phone validation
        let phoneRegex = /^\(\d{3}\) \d{3}-\d{4}$/;

        if (!fullName || !email || !phone || inquiryType === "Select Inquiry Type" || !message) {
            contactMessage.textContent = "All fields are required!";
            contactMessage.classList.add("text-danger");
            return;
        }

        if (!emailRegex.test(email)) {
            contactMessage.textContent = "Please enter a valid email address!";
            contactMessage.classList.add("text-danger");
            return;
        }

        if (!phoneRegex.test(phone)) {
            contactMessage.textContent = "Invalid phone format! Expected: (123) 456-7890";
            contactMessage.classList.add("text-danger");
            return;
        }

        if (!privacyConsent) {
            contactMessage.textContent = "You must consent to our privacy policy!";
            contactMessage.classList.add("text-danger");
            return;
        }

        // In a real application, you would send this data to your server
        // For now, we'll just show a success message
        contactMessage.textContent = "Thank you for your message! We'll get back to you soon.";
        contactMessage.classList.remove("text-danger");
        contactMessage.classList.add("text-success");
        
        // Clear the form
        document.getElementById("contactForm").reset();
    }
    
    // Format phone number as the user types
    document.getElementById("phone").addEventListener("input", function(e) {
        let input = e.target.value.replace(/\D/g, "").substring(0, 10); // Remove non-digits and limit to 10 digits
        let formatted = "";
        
        if (input.length > 0) {
            formatted += "(";
            formatted += input.substring(0, 3);
        }
        if (input.length > 3) {
            formatted += ") ";
            formatted += input.substring(3, 6);
        }
        if (input.length > 6) {
            formatted += "-";
            formatted += input.substring(6, 10);
        }
        
        e.target.value = formatted;
    });
</script>

<style>
    .contact-section {
        background: linear-gradient(to right, #0058b3, #0076d6);
        min-height: 100vh;
    }
    
    .card-contact {
        background: rgba(0, 88, 179, 0.8);
        border-radius: 10px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
    }
    
    .contact-info-card {
        background: rgba(0, 88, 179, 0.8);
        border-radius: 10px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
    }
    
    .form-control {
        background-color: rgba(255, 255, 255, 0.9);
        border: none;
        padding: 10px 15px;
    }
    
    .form-control:focus {
        box-shadow: 0 0 0 3px rgba(255, 255, 255, 0.3);
    }
    
    .btn-primary {
        background-color: #0076d6;
        border: none;
        padding: 10px 25px;
        font-weight: 600;
        width: 100%;
    }
    
    .btn-primary:hover {
        background-color: #0058b3;
    }
</style>