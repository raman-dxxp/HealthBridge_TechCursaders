@{
    ViewData["Title"] = "Contact Us";
}

<section class="contact-hero py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="display-4 fw-bold">Contact Us</h1>
                <p class="lead">We're here to help with any questions or feedback about HealthBridge</p>
            </div>
        </div>
    </div>
</section>

<section class="contact-main py-5 bg-light">
    <div class="container">
        <div class="row g-4">
            <!-- Contact Form -->
            <div class="col-lg-6">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body p-4">
                        <h2 class="card-title fw-bold mb-4">Send Us a Message</h2>
                        <form id="contactForm">
                            <div class="mb-3">
                                <label for="fullname" class="form-label">Full Name *</label>
                                <input type="text" class="form-control" id="fullname" placeholder="Enter your full name">
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Email Address *</label>
                                <input type="email" class="form-control" id="email" placeholder="Enter your email address">
                            </div>
                            <div class="mb-3">
                                <label for="phone" class="form-label">Phone Number</label>
                                <input type="tel" class="form-control" id="phone" placeholder="Enter your phone number">
                            </div>
                            <div class="mb-3">
                                <label for="subject" class="form-label">Subject *</label>
                                <input type="text" class="form-control" id="subject" placeholder="What is your message about?">
                            </div>
                            <div class="mb-3">
                                <label for="message" class="form-label">Your Message *</label>
                                <textarea class="form-control" id="message" rows="5" placeholder="Type your message here..."></textarea>
                            </div>
                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="privacyConsent">
                                <label class="form-check-label" for="privacyConsent">I agree to the privacy policy</label>
                            </div>
                            <button type="button" class="btn btn-primary w-100 py-2" onclick="submitContactForm()">Submit Message</button>
                            <p id="contactMessage" class="mt-3 text-center"></p>
                        </form>
                    </div>
                </div>
            </div>
            
            <!-- Map and Image -->
            <div class="col-lg-6">
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-body p-0">
                        <!-- Replace with your map API embedding -->
                        <div class="ratio ratio-16x9">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2886.9714176095947!2d-79.3847634!3d43.6533936!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89d4cb2b5935bf09%3A0xd263ac8cb7aa19c5!2sToronto%20General%20Hospital!5e0!3m2!1sen!2sca!4v1615897534237!5m2!1sen!2sca" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                        </div>
                    </div>
                </div>
                
                <div class="card shadow-sm border-0">
                    <div class="card-body p-4">
                        <div class="row">
                            <div class="col-md-7">
                                <h3 class="card-title fw-bold mb-4">Contact Information</h3>
                                <div class="d-flex mb-3">
                                    <div class="contact-icon bg-primary-subtle p-3 me-3 rounded">
                                        <i class="bi bi-geo-alt-fill text-primary"></i>
                                    </div>
                                    <div>
                                        <h5 class="fw-bold">Office Address</h5>
                                        <p class="text-muted mb-0">123 Queen Street West, Toronto, ON M5V 2D3</p>
                                    </div>
                                </div>
                                <div class="d-flex mb-3">
                                    <div class="contact-icon bg-primary-subtle p-3 me-3 rounded">
                                        <i class="bi bi-telephone-fill text-primary"></i>
                                    </div>
                                    <div>
                                        <h5 class="fw-bold">Phone Number</h5>
                                        <p class="text-muted mb-0">+1 (416) 555-1234</p>
                                    </div>
                                </div>
                                <div class="d-flex mb-3">
                                    <div class="contact-icon bg-primary-subtle p-3 me-3 rounded">
                                        <i class="bi bi-envelope-fill text-primary"></i>
                                    </div>
                                    <div>
                                        <h5 class="fw-bold">Email Address</h5>
                                        <p class="text-muted mb-0">support@healthbridge.ca</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="card bg-light border-0">
                                    <div class="card-body">
                                        <h5 class="fw-bold mb-3">Business Hours</h5>
                                        <div class="d-flex justify-content-between mb-2">
                                            <span>Monday - Friday:</span>
                                            <span>9:00 AM - 5:00 PM</span>
                                        </div>
                                        <div class="d-flex justify-content-between mb-2">
                                            <span>Saturday:</span>
                                            <span>10:00 AM - 2:00 PM</span>
                                        </div>
                                        <div class="d-flex justify-content-between">
                                            <span>Sunday:</span>
                                            <span>Closed</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Image Banner -->
<section class="contact-image-banner py-5 bg-primary text-white">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h2 class="display-5 fw-bold mb-4">We're here to support your healthcare journey</h2>
                <p class="lead mb-4">Our dedicated team is committed to making healthcare information accessible and secure for all Canadians.</p>
                <a href="#" class="btn btn-light btn-lg px-4">Learn More</a>
            </div>
            <div class="col-lg-6">
                <img src="~/images/healthcare-team.jpg" alt="Healthcare Team" class="img-fluid rounded shadow-lg">
            </div>
        </div>
    </div>
</section>

<!-- FAQ Section -->
<section class="faq-section py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2 class="fw-bold">Frequently Asked Questions</h2>
                <p class="lead">Find quick answers to common questions about HealthBridge</p>
            </div>
        </div>
        
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="accordion" id="faqAccordion">
                    <!-- FAQ Item 1 -->
                    <div class="accordion-item border mb-3 rounded shadow-sm">
                        <h3 class="accordion-header" id="headingOne">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                                How does HealthBridge ensure my medical data is secure?
                            </button>
                        </h3>
                        <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                <p>HealthBridge implements end-to-end encryption, detailed access logging, and granular permission controls to ensure your health information remains private and secure. We adhere to all relevant Canadian privacy legislation including PIPEDA and provincial health information privacy acts. Regular security audits and compliance certifications demonstrate our commitment to protecting your sensitive health information.</p>
                            </div>
                        </div>
                    </div>
                    
                    <!-- FAQ Item 2 -->
                    <div class="accordion-item border mb-3 rounded shadow-sm">
                        <h3 class="accordion-header" id="headingTwo">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                Can I share my health records with multiple healthcare providers?
                            </button>
                        </h3>
                        <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                <p>Yes! HealthBridge puts you in control of your health information. You can easily grant temporary or ongoing access to multiple healthcare providers through our secure sharing controls. Our platform allows you to see which providers have access to your records and revoke that access at any time.</p>
                            </div>
                        </div>
                    </div>
                    
                    <!-- FAQ Item 3 -->
                    <div class="accordion-item border mb-3 rounded shadow-sm">
                        <h3 class="accordion-header" id="headingThree">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                How do I integrate my existing health records into HealthBridge?
                            </button>
                        </h3>
                        <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                <p>HealthBridge connects with participating healthcare providers across Canada to automatically import your health records. For providers not yet in our network, you can easily upload your records manually. Our system organizes everything into a unified timeline, making it easy to see your complete health history in one place.</p>
                            </div>
                        </div>
                    </div>
                    
                    <!-- FAQ Item 4 -->
                    <div class="accordion-item border mb-3 rounded shadow-sm">
                        <h3 class="accordion-header" id="headingFour">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                                Is HealthBridge available across all Canadian provinces?
                            </button>
                        </h3>
                        <div id="collapseFour" class="accordion-collapse collapse" aria-labelledby="headingFour" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                <p>Yes, HealthBridge is available to all Canadians. We've developed our platform to work with healthcare systems across all provinces and territories, with specific integrations for each region's unique healthcare infrastructure. Our mission is to connect all Canadians with their complete health records, regardless of where they live or receive care.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
<script>
    function submitContactForm() {
        let fullName = document.getElementById("fullname").value;
        let email = document.getElementById("email").value;
        let phone = document.getElementById("phone").value;
        let subject = document.getElementById("subject").value;
        let message = document.getElementById("message").value;
        let privacyConsent = document.getElementById("privacyConsent").checked;
        let contactMessage = document.getElementById("contactMessage");

        if (!fullName || !email || !subject || !message) {
            contactMessage.textContent = "Please fill all required fields!";
            contactMessage.className = "mt-3 text-center text-danger";
            return;
        }

        @* if (email.indexOf('@') <= 0) {
            contactMessage.textContent = "Please enter a valid email address!";
            contactMessage.className = "mt-3 text-center text-danger";
            return;
        } *@

        if (!privacyConsent) {
            contactMessage.textContent = "You must agree to the privacy policy!";
            contactMessage.className = "mt-3 text-center text-danger";
            return;
        }

        // In a real application, you would send this data to your server
        contactMessage.textContent = "Thank you for your message! We'll get back to you soon.";
        contactMessage.className = "mt-3 text-center text-success";
        
        // Clear the form
        document.getElementById("contactForm").reset();
    }
</script>
}

